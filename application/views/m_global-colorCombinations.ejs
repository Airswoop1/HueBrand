<!--  Module - Color Combinations - "Primary and Secondary Color Combinations Chart" -->
  <%if(colorCombos){%>
    <div class="container-fluid" id="color-combinations">
      <div class="span12 well">

        <div class="title">
          <button type="button" class="btn btn-default">

              <%
              var moduleTitle = 'Color paring frequency chart'
              if(searchType === 'color'){
              moduleTitle = "Color paring frequency chart";
              }
              else if(searchType === 'attribute'){
              moduleTitle = "Color paring frequency chart"
              }

              %>
              <%=moduleTitle%>
          </button>
        </div>
      
      <div class="well-content">

        <div class="color-combinations-container">
    
          <div class="color-combinations-primary">      
            <div class="combination-box" style="background-color: rgb(
                                                                      <%= Math.floor(colorCombos[colorCombos.length-1].RrgbValue) %>,
                                                                      <%= Math.floor(colorCombos[colorCombos.length-1].GrgbValue) %>,
                                                                      <%= Math.floor(colorCombos[colorCombos.length-1].BrgbValue) %>
                                                                        );
                                                                        border:solid black 1px;">
              <span class="caption fade-caption">
              <%
                var len = colorCombos.length-1;
                var textColor = 'black';
                if(colorCombos[len].RrgbValue<10 && colorCombos[len].GrgbValue<10 && colorCombos[len].BrgbValue<10){
                  textColor = 'white'
                }
              
                %>
                <p style="color:<%=textColor%>"><%= colorCombos[colorCombos.length-1].colorPercentage %>%</p>
              </span>
            </div>
          </div>

          <div class="color-combinations-secondary">
            <%   
              var totesMcgoates = 0;
              for(var j=0;j<colorCombos.length-1; j++){ 
                totesMcgoates += colorCombos[j].colorPercentage;
              }
            %>
            <% for(var i=0;i<colorCombos.length-1; i++){ 
              var percent = Math.floor(parseFloat(((colorCombos[i].colorPercentage/totesMcgoates)*100).toFixed(0),10));
                var borderStyle;
                if(colorCombos[i].RrgbValue>245 && colorCombos[i].GrgbValue>245 && colorCombos[i].BrgbValue>245){
                  borderStyle = 'solid black 1px';
                }
                else{
                  borderStyle = 'none'
                }

            %>

              <div class="combination-box" style="margin-bottom:0px;height: <%=percent%>%;background-color:rgb(
                                                                      <%= Math.floor(colorCombos[i].RrgbValue) %>,
                                                                      <%= Math.floor(colorCombos[i].GrgbValue) %>,
                                                                      <%= Math.floor(colorCombos[i].BrgbValue) %>);
                                                                      border:<%=borderStyle%>"> 
              <span class="caption fade-caption">
                <%
                var textColorSecond = 'black';
                if(colorCombos[i].RrgbValue<10 && colorCombos[i].GrgbValue<10 && colorCombos[i].BrgbValue<10){
                  textColorSecond = 'white';
                }%>
                  <p style='color:<%=textColorSecond%>'><%=colorCombos[i].colorPercentage%>%</p>
              </span>
            </div>  
            <%}%>
            

        </div>
      </div>
    </div>
  </div>
</div>
<%}%>